<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="emo.lab.uqac.emotibit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".application.launcher.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".application.launcher.EmotiBitActivity"
            android:parentActivityName=".application.launcher.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="emo.lab.uqac.emotibit.application.launcher.MainActivity" />
        </activity>
        <activity
            android:name=".application.launcher.SignalsActivity"
            android:parentActivityName=".application.launcher.EmotiBitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="emo.lab.uqac.emotibit.application.launcher.EmotiBitActivity" />
        </activity>
    </application>

</manifest>